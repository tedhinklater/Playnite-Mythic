                                                               Foreground="{DynamicResource DetailsDarkForegroundBrush}" />
                                                        <Grid Margin="0,0,0,10">
                                                            <ItemsControl ItemsSource="{Binding Game.Genres}" Margin="0,3,0,3">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Button Content="{Binding Name}" Style="{StaticResource PropertyItemFeedPanelButton}"
                                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetGenreFilterCommand}"
                                                                        CommandParameter="{Binding}"/>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Grid>
                                                    </StackPanel>
                                                </DockPanel>

                                                <DockPanel Grid.Column="1">
                                                    <Border Width="1" BorderThickness="0" Margin="0,0,15,0"
                                                            Background="{DynamicResource DetailsSeparatorBrush}" />
                                                    <StackPanel Name="PART_ElemFeatures">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Settings DetailsVisibility.Features}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>

                                                        <Label Content="{DynamicResource LOCFeatureLabel}"
                                                               Foreground="{DynamicResource DetailsDarkForegroundBrush}" />
                                                        <Grid Margin="0,0,0,10">
                                                            <ItemsControl ItemsSource="{Binding Game.Features}" Margin="0,3,0,3">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Button Content="{Binding Name}" Style="{StaticResource PropertyItemFeedPanelButton}"
                                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}"
                                                                        CommandParameter="{Binding}"/>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Grid>
                                                    </StackPanel>
                                                </DockPanel>
                                            </Grid>

                                            <StackPanel Margin="0,20,0,0">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=PART_TextNotes, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{PluginSettings Plugin=PlayNotes, Path=IsControlVisible, FallbackValue=False}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <TextBlock Text="{DynamicResource LOCNotesLabel}"
                                                       Foreground="{DynamicResource TextBrush}"
                                                       FontWeight="Bold" Style="{DynamicResource BaseTextBlockStyle}"
                                                           FontSize="{DynamicResource FontSizeLarger}"/>
                                                <TextBox Name="PART_TextNotes" IsReadOnly="True"
                                                     BorderThickness="0" Foreground="{DynamicResource DetailsDarkForegroundBrush}"
                                                     AcceptsReturn="True" TextWrapping="Wrap"
                                                         VerticalScrollBarVisibility="Auto" MaxHeight="300"
                                                     Margin="0,15,0,5" Padding="0" Background="Transparent"/>

                                                <ContentControl x:Name="PlayNotes_NotesViewerControl"
                                                                    Visibility="{PluginSettings Plugin=PlayNotes, Path=IsControlVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                                                                    Margin="0,10,0,0" />

                                            </StackPanel>
                                            
                                            <StackPanel Name="PART_ElemDescription" Margin="0,0,0,0">

                                                <HtmlTextView Name="PART_HtmlDescription"
                                                        Margin="0,-10,0,5"
                                                        HtmlFontSize="{DynamicResource FontSize}"
                                                        HtmlFontFamily="Roboto Condensed"
                                                        HtmlForeground="{DynamicResource DetailsDarkForegroundColor}"
                                                        LinkForeground="{DynamicResource GlyphColor}"                                      
                                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                                            </StackPanel>

                                        </StackPanel>
                                    </StackPanel>

                                </DockPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
