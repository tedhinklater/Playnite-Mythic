<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{DynamicResource DetailsScrollViewer}"
                                  d:DesignWidth="1280"
                                  d:DesignHeight="1550"
                                  d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                  x:Name="PART_ScrollViewHost">
                        <Grid Margin="0,0,0,20">
                            <Separator Background="{DynamicResource LibraryTopSeparatorBrush}" VerticalAlignment="Top" Margin="15,0,25,0" />
                            <!-- Background Image -->
                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataBackground, FallbackValue=False}" Value="True" />
                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableBackgroundImage, FallbackValue=False}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=PART_ImageBackground, Path=Visibility}" Value="Collapsed" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <Grid>
                                    <FadeImage x:Name="PART_ImageBackground" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Top" />
                                    <Border Background="{StaticResource DarkNoiseBrush}" IsHitTestVisible="False"
                                            Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacity}">
                                        <Border.OpacityMask>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                                                    <GradientStop Color="#55FFFFFF" Offset="0.5"/>
                                                    <GradientStop Color="#B3FFFFFF" Offset="0.8"/>
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Border.OpacityMask>
                                    </Border>
                                </Grid>
                                <WrapPanel.OpacityMask>
                                    <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                        <RadialGradientBrush.GradientStops>
                                            <GradientStop Color="Black" Offset="0.5" />
                                            <GradientStop Color="Transparent" Offset="1" />
                                        </RadialGradientBrush.GradientStops>
                                    </RadialGradientBrush>
                                </WrapPanel.OpacityMask>
                            </WrapPanel>

                            <!-- BackgroundChanger plugin background -->
                            <WrapPanel>
                                <Grid>
                                    <ContentControl x:Name="BackgroundChanger_PluginBackgroundImage"
                                                    HorizontalAlignment="Center" VerticalAlignment="Top" />
                                    <Border Background="{StaticResource DarkNoiseBrush}" IsHitTestVisible="False"
                                            Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacity}">
                                        <Border.OpacityMask>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Color="#F2FFFFFF" Offset="0.3"/>
                                                    <GradientStop Color="#B3FFFFFF" Offset="0.8"/>
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Border.OpacityMask>
                                    </Border>
                                </Grid>
                                <WrapPanel.OpacityMask>
                                    <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                        <RadialGradientBrush.GradientStops>
                                            <GradientStop Color="Black" Offset="0.3" />
                                            <GradientStop Color="Transparent" Offset="1" />
                                        </RadialGradientBrush.GradientStops>
                                    </RadialGradientBrush>
                                </WrapPanel.OpacityMask>
                            </WrapPanel>

                            <Grid HorizontalAlignment="Stretch" Margin="20,0,20,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <DockPanel Margin="0,20,0,15" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" Grid.Row="1">
                                    <!--GridConverterGridPanelCloseButton-->
                                    <WrapPanel DockPanel.Dock="Left">
                                        <Image Name="PART_ImageIcon" MaxHeight="48" MaxWidth="48" DockPanel.Dock="Left" 
                                                   Margin="0,0,10,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant">
                                            <Image.Effect>
                                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#0d0d0d" Opacity="0.20"/>
                                            </Image.Effect>
                                        </Image>

                                        <Border DockPanel.Dock="Left"
                                                Tag="{DynamicResource DetailsViewDisplayGameNameIfLogoVisible}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                                <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                                <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontFamily="{DynamicResource FontFamily}" Name="PART_TextDisplayName"
                                                       FontSize="{DynamicResource FontSizeLargest}" Margin="0,0,30,0" 
                                                       TextWrapping="Wrap" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}" />
                                        </Border>

                                        <DockPanel Margin="0,0,0,0">

                                            <ContentControl x:Name="DuplicateHider_SourceSelector"
                                                            DockPanel.Dock="Left" VerticalAlignment="Center"
                                                            VerticalContentAlignment="Center"   
                                                            Margin="0,0,10,0"  
                                                            Height="24"
                                                            RenderOptions.BitmapScalingMode="Fant" />

                                            <ContentControl x:Name="PlayState_GameStateSwitchControl" Height="40" Margin="0,0,10,0"
                                                            Visibility="{PluginSettings Plugin=PlayState, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="ScreenshotsVisualizer_PluginButton" Margin="0,0,10,0"
                                                            Height="40" MaxWidth="150" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=ScreenshotsVisualizer, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="HowLongToBeat_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=HowLongToBeat, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="CheckDlc_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=CheckDlc, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="SuccessStory_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="GameActivity_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=GameActivity, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="SystemChecker_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=SystemChecker, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="CheckLocalizations_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                            <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl"
                                                            DockPanel.Dock="Left" VerticalAlignment="Center">
                                                <ContentControl.Resources>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                </ContentControl.Resources>
                                            </ContentControl>
                                        </DockPanel>
                                    </WrapPanel>
                                </DockPanel>

                                <DockPanel Grid.Row="2" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}"
                                           Visibility="{PluginSettings Plugin=LibraryManagement, Path=EnableIntegrationFeatures, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ContentControl x:Name="LibraryManagement_PluginFeaturesIconList" Height="35" Margin="0,0,0,0"
                                                    HorizontalAlignment="Left" 
                                                    Opacity="0.85" />
                                </DockPanel>

                                <DockPanel Grid.Row="3" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}"
                                           Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationFlags, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ContentControl x:Name="CheckLocalizations_PluginFlags" Height="30" Margin="8,0,0,0"
                                                    HorizontalAlignment="Left" 
                                                    Opacity="0.85" />
                                </DockPanel>
                                
                                <DockPanel MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" Grid.Row="4" >
                                    <StackPanel DockPanel.Dock="Right" Width="300" Margin="2,67,0,0">
                                        <StackPanel.Resources>
                                            <Style TargetType="ItemsControl">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                            <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                <Setter Property="Margin" Value="0,4,8,4" />
                                                <Setter Property="VerticalAlignment" Value="Top" />
                                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                            </Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}" />
                                        </StackPanel.Resources>
                                        
                                        <!--#region Logo & Cover Image-->
                                        <Grid Margin="50,-117,-100,5"
                                              Tag="{DynamicResource DetailsViewAllowUseOfLogos}" >
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="false">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=true}" Value="false" >
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Border Padding="0" Height="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxHeight, FallbackValue=0}" MaxWidth="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxWidth, FallbackValue=0}" />
                                            <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                        </Grid>

                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="75,0,-75,0">
                                            <Border Name="Mask" Background="White" CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}" />
                                            <Border>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Image Name="PART_ImageCover" MaxHeight="{Settings GameDetailsCoverHeight}" MaxWidth="300"
                                                       StretchDirection="Both" Stretch="Uniform"
                                                       RenderOptions.BitmapScalingMode="Fant"/>
                                            </Border>

                                            <ContentControl x:Name="BackgroundChanger_PluginCoverImage"
                                                            MaxHeight="{Settings GameDetailsCoverHeight}">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataCover, FallbackValue=False}" Value="True" />
                                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableCoverImage, FallbackValue=False}" Value="True" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                            
                                            <Grid.Effect>
                                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#0d0d0d" Opacity="0.20" />
                                            </Grid.Effect>
                                            <Grid.OpacityMask>
                                                <VisualBrush Visual="{Binding ElementName=Mask}" />
                                            </Grid.OpacityMask>
                                        </Grid>
                                        <!--#regionend-->

										<Button Grid.Column="0" HorizontalAlignment="Stretch"
												Margin="75,11,-75,0"
												VerticalAlignment="Stretch" Name="PART_ButtonPlayAction"
												Height="72" Width="295" Style="{DynamicResource PlayButtonViews}" />
										<Button HorizontalAlignment="Stretch"
												Margin="75,11,-75,0"
												Height="72" VerticalAlignment="Stretch"
												Name="PART_ButtonContextAction" Style="{DynamicResource ContextButtonViews}" />
										<Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="0,10,0,10">
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="*" />
												<ColumnDefinition Width="*" />
											</Grid.ColumnDefinitions>
										<!--<Button Grid.Column="0" Name="PART_ButtonMoreActions" Height="50" Content="{DynamicResource LOCMoreAction}" FontFamily="{DynamicResource FontIcoFont}" Margin="0,0,5,0" Style="{DynamicResource MoreActionButtonViews}" Padding="0" />
												<Button Grid.Column="1" x:Name="PART_ButtonEditGame" Content="{DynamicResource LOCEditGame}" Margin="5,0,0,0" Height="50" Focusable="False" FontFamily="{DynamicResource FontIcoFont}" Style="{DynamicResource MoreActionButtonViews}" /> -->
										</Grid>

                                        <!--#region Game Details-->
                                        <!--<TextBlock Text="{DynamicResource LOCGameDetails}" Margin="0,15,0,5" FontWeight="Bold" Foreground="{DynamicResource DetailsViewDetailsLabelForegroundBrush}" />
                                        <Separator Background="{DynamicResource DetailsViewSeparatorBrush}" />-->
                                        <StackPanel Margin="75,0,-250,0" Grid.IsSharedSizeScope="True">
                                            <StackPanel.Resources>
                                                <Style x:Key="Icon" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                    <Setter Property="Width" Value="24"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}"/>
                                                </Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                    <Setter Property="Foreground" Value="{DynamicResource DetailsDarkForegroundBrush}" />
                                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Setter Property="Margin" Value="0,0,0,0" />
                                                </Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="FontWeight" Value="Normal" />
                                                    <Setter Property="Foreground" Value="{DynamicResource DetailsDarkForegroundBrush}" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Setter Property="Margin" Value="0,0,10,0" />
                                                </Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Padding" Value="0,2,0,2" />
                                                    <Setter Property="BorderBrush" Value="#00ffffff" />
                                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                </Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}">
                                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                </Style>

                                            </StackPanel.Resources>

                                            <Border Name="PART_ElemRecentActivity">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCRecentActivityLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Grid.Column="1" Name="PART_TextRecentActivity" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemInstallDirectory">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC5B;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameInstallDirTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonInstallDirectory" VerticalAlignment="Center" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemInstallSize">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xef43;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCInstallSizeLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Grid.Column="1" Name="PART_TextInstallSize" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemAdded">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCDateAddedLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Grid.Column="1" Name="PART_TextAdded" />
                                                </Grid>
                                            </Border>
                                            
                                            <Border Name="PART_ElemLibrary">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF65;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameProviderTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonLibrary" VerticalAlignment="Center" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemSource">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF65;" Style="{StaticResource Icon}"
                                                                       FontFamily="{StaticResource FontIcoFont}" 
                                                                       Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCSourceLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonSource" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemPlatform">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEEE;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGamePlatformTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Grid.Column="1" Name="PART_ItemsPlatforms" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemCategories">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF74;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameCategoriesTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Grid.Column="1" Name="PART_ItemsCategories" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemReleaseDate">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameReleaseDateTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonReleaseDate" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemDevelopers">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEF3;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCDeveloperLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Grid.Column="1" Name="PART_ItemsDevelopers" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemPublishers">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEF3;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCPublisherLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Grid.Column="1" Name="PART_ItemsPublishers" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemAgeRating">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCAgeRatingLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Grid.Column="1" Name="PART_ItemsAgeRatings" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemSeries">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEEF;" Style="{StaticResource Icon}"
